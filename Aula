// Defina os dados do gráfico
var data = {
    labels: ['Boxplot'], // Rótulo do gráfico
    datasets: [
        {
            label: 'Dados', // Rótulo do conjunto de dados
            data: [
                {
                    q1: <?php echo $primeiro_quartil; ?>,
                    q3: <?php echo $terceiro_quartil; ?>,
                    median: <?php echo $mediana; ?>,
                    outlier: <?php echo $outliers; ?>,
                    min: <?php echo $limite_inferior; ?>,
                    max: <?php echo $limite_superior; ?>
                }
            ]
        }
    ]
};

// Configurações do gráfico
var options = {
    responsive: true,
    title: {
        display: true,
        text: 'Boxplot'
    },
    tooltips: {
        callbacks: {
            label: function(tooltipItem, data) {
                var dataset = data.datasets[tooltipItem.datasetIndex];
                var outlier = dataset.data[tooltipItem.index].outlier;
                return 'Q1: ' + dataset.data[tooltipItem.index].q1 + '\n' +
                    'Mediana: ' + dataset.data[tooltipItem.index].median + '\n' +
                    'Q3: ' + dataset.data[tooltipItem.index].q3 + '\n' +
                    'Limite Inferior: ' + dataset.data[tooltipItem.index].min + '\n' +
                    'Limite Superior: ' + dataset.data[tooltipItem.index].max + '\n' +
                    'Outliers: ' + outlier;
            }
        }
    },
    legend: {
        display: false
    },
    scales: {
        yAxes: [{
            ticks: {
                beginAtZero:false
            }
        }]
    }
};

// Cria o gráfico boxplot
var ctx = document.getElementById('myBoxplot').getContext('2d');
var myChart = new Chart(ctx, {
    type: 'boxplot',
    data: data,
    options: options
});
